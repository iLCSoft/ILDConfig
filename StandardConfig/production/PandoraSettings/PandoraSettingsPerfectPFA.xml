    </SoftwareCompensation>
    <EmShowerPlugin>LCEmShowerId</EmShowerPlugin>
    <PhotonPlugin>LCPhotonId</PhotonPlugin>
    <ElectronPlugin>LCElectronId</ElectronPlugin>
